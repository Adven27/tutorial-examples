<?xml version="1.0" encoding="UTF-8"?>
<job id="messagesender" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
    <properties>
        <property name="log_file_name" value="log1.txt"/>
        <property name="airtime_price" value="0.08"/>
        <property name="tax_rate" value="0.07"/>
    </properties>
    <step id="bills">
        <chunk checkpoint-policy="item" item-count="3">
            <reader ref="ClientReader"></reader>
            <processor ref="NOPProcessor"></processor>
            <writer ref="MessageWriter"></writer>
        </chunk>
        <end on="COMPLETED"/>
    </step>
</job>
